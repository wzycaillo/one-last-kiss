#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>
int search(int a[], int n, int key) {
	int* ptr = a;
	for (; ptr < a + n; ptr++) {
		if (*ptr == key) {
			return 1;
		}
	}
	return 0;
}
int sum_array(int a[], int n) {
	int* ptr = a;
	int sum = 0;
	for (; ptr < a + n; ptr++) {
		sum += *ptr;
	}
	return sum;
}
void replaceFoo(char* str) {
	char* p = str;
	while (*p != '\0' && *(p + 1) != '\0' && *(p + 2) != '\0') {
		if (*p == 'f' && *(p + 1) == 'o' && *(p + 2) == 'o') {
			*p = 'x';
			*(p + 1) = 'x';
			*(p + 2) = 'x';
			p += 3; 
		}
		else {
			p++; 
		}
	}
}
